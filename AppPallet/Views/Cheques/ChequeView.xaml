<?xml version="1.0" encoding="utf-8" ?>
<uranium:UraniumContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                            x:Class="AppPallet.Views.ChequeView"
                            Title="Cheques"
                            xmlns:viewModels="clr-namespace:AppPallet.ViewModels"
                            xmlns:models="clr-namespace:AppPallet.Models"
                            xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
                            xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
                            xmlns:converters="clr-namespace:AppPallet.Converters"
                            xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
                            xmlns:dg="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
                            x:DataType="viewModels:ChequeViewModel">



    <uranium:UraniumContentPage.Resources>
        <ResourceDictionary>
            <converters:EstadoChequeToColorConverter x:Key="EstadoChequeToColor" />
        </ResourceDictionary>
    </uranium:UraniumContentPage.Resources>


    <ScrollView>
        <Grid RowDefinitions="Auto,Auto">
            <Grid Padding="20" ColumnSpacing="20" ColumnDefinitions="0.8*,*,0.5*">
                <Border Stroke="green" StrokeThickness="3" HeightRequest="50" WidthRequest="100" Grid.Column="0">
                    <Label Text="Verde" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
                <Border Stroke="red" StrokeThickness="3" HeightRequest="50" WidthRequest="100" Grid.Column="1">
                    <Label Text="Rojo" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
                <Border Stroke="black" StrokeThickness="3" HeightRequest="50" WidthRequest="100" Grid.Column="2">
                    <Label Text="Negro" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
            </Grid>

            <Grid Grid.Row="1" ColumnDefinitions="0.2*,*,0.3*">
                <Border Stroke="Silver" StrokeThickness="3" HeightRequest="50" WidthRequest="100" >
                    <Label Text="Plata" HorizontalOptions="Center" VerticalOptions="Center" />
                </Border>


                <dg:DataGrid ItemsSource="{Binding ListaCheques}"            
                                 IsRefreshing="{Binding IsBusy}" 
                                 PaginationEnabled="True"
                                 Style="{StaticResource TablaComun}"
                                 SelectedItem="{Binding ChequeSeleccionado, Mode=TwoWay}"
                                 PageSize="20" 
                                 PageNumber="1"
                                 SelectionMode="Single" 
                                 BorderColor="Transparent"
                                 Grid.Column="1">
                    <dg:DataGrid.Columns>
                        <dg:DataGridColumn Title="Proveedor">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label Text="{Binding Proveedor}" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Tipo">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label Text="{Binding Tipo}" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" VerticalTextAlignment="Center"/>
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="NÂ° de cheque">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label Text="{Binding NumCheque}" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" VerticalTextAlignment="Center"/>
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Monto">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label Text="{Binding Monto, StringFormat='${0:N2}' }"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           VerticalTextAlignment="Center"/>
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Fecha de Emision">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label Text="{Binding FechaEmision, StringFormat='{0:dd/MM/yyyy}'}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Fecha de Pago">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label Text="{Binding FechaPago, StringFormat='{0:dd/MM/yyyy}'}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Estado">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <BoxView
                                                WidthRequest="24"
                                                HeightRequest="24"
                                                CornerRadius="12"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                BackgroundColor="{Binding Estado, Converter={StaticResource EstadoChequeToColor}}"/>
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                    </dg:DataGrid.Columns>
                </dg:DataGrid>


                <VerticalStackLayout Grid.Column="2" Spacing="10" VerticalOptions="Center">

                    <Button StyleClass="FilledButton"  Text="Agregar cheque" Command="{Binding MostrarPopupChequeCommand}"  WidthRequest="180"/>

                    <Button StyleClass="OutlinedButton"  Text="Modificar cheque" Command="{Binding MostrarPopupChequeModificarCommand}"  WidthRequest="180"/>


                </VerticalStackLayout>
                
            </Grid>
        </Grid>
    </ScrollView>

</uranium:UraniumContentPage>