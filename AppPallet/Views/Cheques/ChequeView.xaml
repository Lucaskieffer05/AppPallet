<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppPallet.Views.ChequeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:AppPallet.Converters"
    xmlns:dg="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:models="clr-namespace:AppPallet.Models"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:viewModels="clr-namespace:AppPallet.ViewModels"
    Title="Cheques"
    x:DataType="viewModels:ChequeViewModel"
    Shell.NavBarIsVisible="False">



    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:EstadoChequeToColorConverter x:Key="EstadoChequeToColor" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">

        <!--  Header  -->
        <Border Grid.Row="0" Stroke="Black">
            <Grid BackgroundColor="#374151" ColumnDefinitions="Auto,*,*">

                <Label
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    FontAttributes="Bold"
                    FontSize="25"
                    Text="CHEQUES"
                    TextColor="#F6F1EB"
                    VerticalOptions="Center" />

                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                    <Label
                        FontSize="15"
                        Text="Filtrar por mes:"
                        TextColor="White"
                        VerticalOptions="Center" />

                    <material:PickerField
                        x:Name="MesPicker"
                        Padding="5"
                        AccentColor="White"
                        BorderColor="White"
                        InputBackgroundColor="#F6F1EB"
                        ItemsSource="{Binding Meses}"
                        SelectedIndex="{Binding MesIngresado, Mode=TwoWay}"
                        TextColor="White" />

                    <material:PickerField
                        x:Name="AñoPicker"
                        Padding="5"
                        AccentColor="White"
                        BorderColor="White"
                        InputBackgroundColor="#F6F1EB"
                        ItemsSource="{Binding Años}"
                        SelectedItem="{Binding AñoIngresado, Mode=TwoWay}"
                        TextColor="White" />



                </HorizontalStackLayout>
                <Button
                    Grid.Column="2"
                    Padding="20,10"
                    BackgroundColor="#F6F1EB"
                    BorderColor="#D0B595"
                    BorderWidth="3"
                    Command="{Binding MostrarPopupChequeCommand}"
                    CornerRadius="20"
                    HeightRequest="45"
                    StyleClass="FilledButton"
                    Text="Agregar cheque"
                    TextColor="Black"
                    WidthRequest="200" />
            </Grid>
        </Border>

        <!--  Lista Cheques  -->
        <Grid Grid.Row="1" >

            <Grid
                ColumnDefinitions="0.2*,*,0.3*"
                HorizontalOptions="Center">

                <dg:DataGrid
                    Grid.Column="1"
                    Margin="0,50"
                    BorderColor="Transparent"
                    IsRefreshing="{Binding IsBusy}"
                    ItemsSource="{Binding ListaCheques}"
                    MinimumWidthRequest="800"
                    SelectedItem="{Binding ChequeSeleccionado, Mode=TwoWay}"
                    SelectionMode="Single"
                    Style="{StaticResource TablaComun}">
                    <dg:DataGrid.Columns>
                        <dg:DataGridColumn Title="Proveedor">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label
                                        HorizontalOptions="Center"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Proveedor}"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Tipo">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label
                                        HorizontalOptions="Center"
                                        Text="{Binding Tipo}"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="N° de cheque">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label
                                        HorizontalOptions="Center"
                                        Text="{Binding NumCheque}"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Monto">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label
                                        HorizontalOptions="Center"
                                        Text="{Binding Monto, StringFormat='${0:N2}'}"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Fecha de Emision">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label
                                        HorizontalOptions="Center"
                                        Text="{Binding FechaEmision, StringFormat='{0:dd/MM/yyyy}'}"
                                        VerticalOptions="Center" />
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Fecha de Pago">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <Label
                                        HorizontalOptions="Center"
                                        Text="{Binding FechaPago, StringFormat='{0:dd/MM/yyyy}'}"
                                        VerticalOptions="Center" />
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                        <dg:DataGridColumn Title="Estado">
                            <dg:DataGridColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Cheque">
                                    <BoxView
                                        BackgroundColor="{Binding Estado, Converter={StaticResource EstadoChequeToColor}}"
                                        CornerRadius="12"
                                        HeightRequest="24"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        WidthRequest="24" />
                                </DataTemplate>
                            </dg:DataGridColumn.CellTemplate>
                        </dg:DataGridColumn>
                    </dg:DataGrid.Columns>
                </dg:DataGrid>


                <!--  Mensaje cuando la lista está vacía  -->
                <Label
                    Grid.Column="1"
                    Margin="0,50"
                    FontSize="18"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HayCheques}"
                    Text="No hay cheques para mostrar"
                    TextColor="Gray"
                    VerticalOptions="Center" />


                <VerticalStackLayout
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    Spacing="15"
                    VerticalOptions="Start"
                    Margin="20,10,20,0">

                    <!-- Panel de Resumen por Estado -->
                    <Border
                        BackgroundColor="#F6F1EB"
                        Padding="15"
                        Stroke="#D0B595"
                        StrokeThickness="2"
                        StrokeShape ="5">
                        <VerticalStackLayout Spacing="12">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="Resumen por Estado"
                                TextColor="Black" />

                            <!-- Sin Estado -->
                            <Border
                                BackgroundColor="#E8F5E9"
                                Padding="10"
                                StrokeThickness="1"
                                Stroke="#D0B595"
                                StrokeShape ="5">
                                <VerticalStackLayout Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Sin Estado"
                                        TextColor="Black" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding CantidadSinEstado, StringFormat='Cantidad: {0}'}"
                                        TextColor="Black" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding MontoSinEstado, StringFormat='Monto: ${0:N2}'}"
                                        TextColor="Black" />
                                </VerticalStackLayout>
                            </Border>

                            <!-- Pagado -->
                            <Border
                                BackgroundColor="#FFE553"
                                Padding="10"
                                StrokeThickness="1"
                                Stroke="#D0B595"
                                StrokeShape ="5">
                                <VerticalStackLayout Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Pagado"
                                        TextColor="Black" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding CantidadPagado, StringFormat='Cantidad: {0}'}"
                                        TextColor="Black" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding MontoPagado, StringFormat='Monto: ${0:N2}'}"
                                        TextColor="Black" />
                                </VerticalStackLayout>
                            </Border>

                            <!-- Vencido -->
                            <Border
                                BackgroundColor="#FFA353"
                                Padding="10"
                                StrokeThickness="1"
                                Stroke="#D0B595"
                                StrokeShape ="5">
                                <VerticalStackLayout Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Vencido"
                                        TextColor="Black" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding CantidadVencido, StringFormat='Cantidad: {0}'}"
                                        TextColor="Black" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding MontoVencido, StringFormat='Monto: ${0:N2}'}"
                                        TextColor="Black" />
                                </VerticalStackLayout>
                            </Border>

                            <!-- Pago Inmediato -->
                            <Border
                                BackgroundColor="#D65265"
                                Padding="10"
                                StrokeThickness="1"
                                Stroke="#D0B595"
                                StrokeShape ="5">
                                <VerticalStackLayout Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Pago inmediato"
                                        TextColor="White" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding CantidadPagoInmediato, StringFormat='Cantidad: {0}'}"
                                        TextColor="White" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding MontoPagoInmediato, StringFormat='Monto: ${0:N2}'}"
                                        TextColor="White" />
                                </VerticalStackLayout>
                            </Border>

                            <!-- Próximo a Pagar -->
                            <Border
                                BackgroundColor="#58D651"
                                Padding="10"
                                StrokeThickness="1"
                                Stroke="#D0B595"
                                StrokeShape ="5">
                                <VerticalStackLayout Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="Próximo a pagar"
                                        TextColor="Black" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding CantidadProximoAPagar, StringFormat='Cantidad: {0}'}"
                                        TextColor="Black" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding MontoProximoAPagar, StringFormat='Monto: ${0:N2}'}"
                                        TextColor="Black" />
                                </VerticalStackLayout>
                            </Border>

                            <!-- Total -->
                            <Border
                                BackgroundColor="#374151"
                                Padding="10"
                                StrokeThickness="2"
                                Stroke="#D0B595"
                                StrokeShape ="5">
                                <VerticalStackLayout Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        HorizontalOptions="Center"
                                        Text="TOTAL"
                                        TextColor="#F6F1EB" />
                                    <Label
                                        FontSize="14"
                                        HorizontalOptions="Center"
                                        Text="{Binding CantidadTotal, StringFormat='Cantidad: {0}'}"
                                        TextColor="#F6F1EB" />
                                    <Label
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="{Binding MontoTotal, StringFormat='Monto: ${0:N2}'}"
                                        TextColor="#F6F1EB" />
                                </VerticalStackLayout>
                            </Border>
                        </VerticalStackLayout>
                    </Border>

                    <Button
                        Margin="40,0"
                        Command="{Binding MostrarPopupChequeModificarCommand}"
                        StyleClass="OutlinedButton"
                        Text="Modificar cheque"
                        WidthRequest="180" />

                </VerticalStackLayout>

            </Grid>
        </Grid>
    </Grid>

</ContentPage>