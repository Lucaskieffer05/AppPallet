<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPallet.View.ChequeModificarView"
             HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="1000">

    <VerticalStackLayout >

        <Label Text="Proveedor" />
        <Entry Text="{Binding ChequeSeleccionado.Proveedor, Mode=TwoWay}" />

        <Label Text="Tipo" />
        <Entry Text="{Binding ChequeSeleccionado.Tipo, Mode=TwoWay}" />

        <Label Text="Número de Cheque" />
        <Entry Text="{Binding ChequeSeleccionado.NumCheque, Mode=TwoWay}" />

        <Label Text="Monto" />
        <Entry Text="{Binding ChequeSeleccionado.Monto, Mode=TwoWay}" Keyboard="Numeric" />

        <Label Text="Fecha de Emisión" />
        <DatePicker Date="{Binding ChequeSeleccionado.FechaEmision, Mode=TwoWay}" />

        <Label Text="Fecha de Pago" />
        <DatePicker Date="{Binding ChequeSeleccionado.FechaPago, Mode=TwoWay}" />

        <Label Text="Estado" />
        <Entry Text="{Binding ChequeSeleccionado.Estado, Mode=TwoWay}" Keyboard="Numeric" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="Guardar" Command="{Binding SaveCommand}" />
            <Button Text="Cancelar" Command="{Binding CancelCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentView>
